<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/controlsLayout">

        <Button
            android:id="@+id/webViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Открыть WebView"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Воспроизвести аудио"/>

        <Button
            android:id="@+id/notifyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить уведомление"/>

        <Button
            android:id="@+id/delayedNotifyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отправить отложенное уведомление"/>

        <ImageView
            android:id="@+id/animatedImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_foreground" />

    </LinearLayout>

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/controlsLayout"
        android:visibility="gone"/>

</RelativeLayout>
